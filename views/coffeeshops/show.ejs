<% layout('layouts/boilerplate.ejs') -%>
<div class="row">
  <div class="col-md-6">
    <div class="card mt-4">
      <img
        class="card-img-top"
        src="<%=coffeeshop.image%> "
        alt="Image of <%=coffeeshop.title%>"
      />
      <div class="card-body">
        <h5 class="card-title"><%=coffeeshop.title%></h5>
        <p class="card-text"><%=coffeeshop.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%=coffeeshop.location%></li>
      </ul>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">$<%=coffeeshop.price%> per beverage</li>
      </ul>
      <div class="card-body">
        <a
          class="card-link d-inline"
          href="/coffeeshops/<%=coffeeshop._id%>/edit"
        >
          <button class="btn btn-info">Edit</button></a
        >

        <form
          action="/coffeeshops/<%=coffeeshop._id%>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button class="btn btn-danger">Delete</button>
        </form>

        <a class="card-link d-inline" href="/coffeeshops"
          ><button class="btn btn-secondary">Back to all</button></a
        >
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
  <div class="col-md-6 mt-4">
    <h2>Leave a Review</h2>
    <form
      action="/coffeeshops/<%=coffeeshop._id%>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          class="form-range"
          type="range"
          name="review[rating]"
          id="rating"
          min="1"
          max="5"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% for (let review of coffeeshop.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%=review.rating%></h5>
        <p class="card-text">Review: <%=review.body%></p>
        <form
          action="/coffeeshops/<%=coffeeshop._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
