<% layout('layouts/boilerplate.ejs') -%>

<div class="col-8 offset-1">
  <div class="card shadow px-5 mt-5">
    <h1 class="mt-3 text-center">Edit <%=coffeeshop.title%></h1>
    <form
      action="/coffeeshops/<%=coffeeshop._id%>?_method=PUT"
      method="POST"
      class="my-3 validated-form"
      enctype="multipart/form-data"
      novalidate
    >
      <div class="form-group mb-3">
        <label for="title">Coffee shop name</label>
        <input
          type="text"
          class="form-control"
          id="title"
          aria-describedby="title"
          value="<%=coffeeshop.title%>"
          name="coffeeshop[title]"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please provide a valid title.</div>
      </div>
      <div class="form-group mb-3">
        <label for="location">Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          value="<%=coffeeshop.location%>"
          name="coffeeshop[location]"
          required
        />
        <div class="valid-feedback">Location looks good!</div>
        <div class="invalid-feedback">Please provide a valid location.</div>
      </div>
      <div class="form-group mb-3">
        <label for="description">Description</label>
        <textarea
          type="text"
          class="form-control"
          id="description"
          aria-describedby="description"
          value="<%=coffeeshop.description%>"
          name="coffeeshop[description]"
          required
        >
<%=coffeeshop.description%></textarea
        >
        <div class="valid-feedback">Description looks good!</div>
        <div class="invalid-feedback">Please provide a valid description.</div>
      </div>
      <button type="submit" class="mt-3 btn btn-success col-6 offset-3">
        Submit change
      </button>

      <a
        href="/coffeeshops/<%=coffeeshop._id%>"
        class="mt-4 mb-2 btn btn-light d-block"
        >Back to <%=coffeeshop.title%></a
      >
    </form>
  </div>
</div>
