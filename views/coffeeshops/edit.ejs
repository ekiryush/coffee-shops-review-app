<% layout('layouts/boilerplate.ejs') -%>

<div class="col-8 offset-2">
  <h1 class="mt-3 text-center">Edit <%=coffeeshop.title%></h1>
  <form
    action="/coffeeshops/<%=coffeeshop._id%>?_method=PUT"
    method="POST"
    class="mt-3 validated-form"
    novalidate
  >
    <div class="form-group mb-3">
      <label for="title">Coffee shop name</label>
      <input
        type="text"
        class="form-control"
        id="title"
        aria-describedby="title"
        value="<%=coffeeshop.title%>"
        name="coffeeshop[title]"
        required
      />
      <div class="valid-feedback">Title looks good!</div>
      <div class="invalid-feedback">Please provide a valid title.</div>
    </div>
    <div class="form-group mb-3">
      <label for="location">Location</label>
      <input
        type="text"
        class="form-control"
        id="location"
        value="<%=coffeeshop.location%>"
        name="coffeeshop[location]"
        required
      />
      <div class="valid-feedback">Location looks good!</div>
      <div class="invalid-feedback">Please provide a valid location.</div>
    </div>
    <div class="form-group mb-3">
      <label for="title">Image Upload</label>
      <input
        type="text"
        class="form-control"
        id="title"
        aria-describedby="title"
        value="<%=coffeeshop.image%>"
        name="coffeeshop[image]"
        required
      />
      <div class="valid-feedback">Image url looks good!</div>
      <div class="invalid-feedback">Please provide a valid image url.</div>
    </div>
    <div class="form-group mb-3">
      <label for="price">Price</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">$</div>
        </div>
        <input
          type="number"
          class="form-control"
          id="price"
          step="any"
          value="<%=coffeeshop.price%>"
          name="coffeeshop[price]"
          required
        />
        <div class="valid-feedback">Price looks good!</div>
        <div class="invalid-feedback">Please provide a valid price.</div>
      </div>
    </div>
    <div class="form-group mb-3">
      <label for="description">Description</label>
      <textarea
        type="text"
        class="form-control"
        id="description"
        aria-describedby="description"
        value="<%=coffeeshop.description%>"
        name="coffeeshop[description]"
        required
      >
<%=coffeeshop.description%></textarea
      >
      <div class="valid-feedback">Description looks good!</div>
      <div class="invalid-feedback">Please provide a valid description.</div>
    </div>
    <button type="submit" class="mt-3 btn btn-success">Submit change</button>

    <a
      href="/coffeeshops/<%=coffeeshop._id%>"
      class="mt-3 btn btn-light d-block"
      >Back to <%=coffeeshop.title%></a
    >
  </form>
</div>
