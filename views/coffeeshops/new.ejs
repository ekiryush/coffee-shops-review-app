<% layout('layouts/boilerplate.ejs') -%>

<div class="md-col-6 ">
  <div class="card shadow px-5 mt-5 pb-3">
    <h1 class="mt-3 text-center">Add new coffee shop</h1>
    <form action="/coffeeshops" method="POST" class="my-3 validated-form" novalidate enctype="multipart/form-data">
      <div class="form-group mb-3">
        <label for="title">Coffee shop name</label>
        <input
          type="text"
          class="form-control"
          id="title"
          aria-describedby="title"
          placeholder="Enter title"
          name="coffeeshop[title]"
          required
        />
        <div class="valid-feedback">
          Title looks good!
          </div>
          <div class="invalid-feedback">
            Please provide a valid title.
          </div>
      </div>
      
      <div class="form-group mb-3">
        <label for="location">Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          placeholder="Enter location"
          name="coffeeshop[location]"
          required
        />
        <div class="valid-feedback">
          Location looks good!
          </div>
          <div class="invalid-feedback">
            Please provide a valid location.
          </div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input class="form-control" type="file" id="image" name="image">
      </div>
      <div class="form-group mb-3">
        <label for="description">Description</label>
        <textarea
          type="text"
          class="form-control"
          id="description"
          aria-describedby="description"
          placeholder="Please type here"
          name="coffeeshop[description]"
          required
        /></textarea>
        <div class="valid-feedback">
          Description looks good!
          </div>
          <div class="invalid-feedback">
            Please provide a valid description.
          </div>
        </div>
      <button type="submit" class="mt-3 btn btn-success col-12">Add Coffee Shop</button>
      
      <a href="/coffeeshops" class='mt-4 btn btn-light d-block'>Back to all coffee shops</a>
    </form>
  </div>
</div>