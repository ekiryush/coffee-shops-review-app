<% layout('layouts/boilerplate.ejs') -%>
<h1 class="mt-3">List of Coffee Shops</h1>

<a href="/coffeeshops/new">
  <button class="btn btn-light">Add new coffee shop</button></a
>

<ul>
  <% for (let shop of coffeeshops) { %>
  <!-- <li><a href="/coffeeshops/<%=shop._id%>"><%=shop.title%></a></li> -->

  <div class="card mt-3">
    <div class="row">
      <div class="col-md-4">
        <img
          src="<%=shop.image%> "
          class="card-img-top"
          alt="<%=shop.title%> "
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=shop.title%></h5>
          <p class="card-text"><%=shop.description%></p>
          <p class="text-muted"><%=shop.location%></p>
          <a href="/coffeeshops/<%=shop._id%> " class="btn btn-info">View</a>
        </div>
      </div>
    </div>
  </div>

  <% } %>
</ul>
