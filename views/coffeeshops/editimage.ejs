<% layout('layouts/boilerplate.ejs') -%>

<div class="col-8 offset-1">
  <div class="card shadow px-5 mt-5">
    <h1 class="mt-3 text-center">Edit <%=coffeeshop.title%>'s Image</h1>
    <form
      action="/coffeeshops/image/<%=coffeeshop._id%>?_method=PUT"
      method="POST"
      class="my-3 validated-form text-center"
      enctype="multipart/form-data"
      novalidate
    >
      <div class="form-group mb-3">
        <label for="image" class="form-label fs-5"
          >Please select an image</label
        >
        <input class="form-control" type="file" id="image" name="image" />
      </div>
      <button type="submit" class="mt-2 btn btn-success">Submit change</button>
      <a
        href="/coffeeshops/<%=coffeeshop._id%>"
        class="mt-4 mb-2 btn btn-light d-block"
        >Back to <%=coffeeshop.title%></a
      >
    </form>
  </div>
</div>
